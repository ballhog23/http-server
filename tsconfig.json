{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "@types/express/custom.d.ts"],
  "exclude": ["node_modules"],
  "typeRoots": [
    "@types",
    "./node_modules/@types"
  ]
}